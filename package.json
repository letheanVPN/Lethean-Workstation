  "version": "4.0.10",
  "description": "Lethean Desktop Toolkit",
  "homepage": "https://github.com/letheanVPN/desktop/wiki",
  "bugs": {
    "url": "https://github.com/letheanVPN/desktop/issues",
    "email": "hello@lt.hn"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/letheanVPN/desktop.git"
  },
  "workspaces": [
    "frontend",
    "server"
  ],
  "private": true,
  "scripts": {
    "start": "wails dev",
    "build": "wails build --clean",
    "clean": "rimraf **/node_modules **/*-lock.json **/*.json.md5",
    "postinstall": "go install github.com/wailsapp/wails/v2/cmd/wails@latest",
    "dev:git-update": "git submodule sync && git submodule update",
    "be:serve": "cd server && deno run --allow-net --allow-env --allow-run --allow-read --allow-write --unstable src/server.ts backend start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
